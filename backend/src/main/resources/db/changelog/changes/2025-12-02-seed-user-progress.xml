<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                                       http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <!--
      Selle changesetiga me EI LISA uut rida,
      vaid uuendame olemasolevat progressi kasutajale test@ai.com.
    -->
    <changeSet id="2025-12-02-seed-user-progress" author="ai">
        <update tableName="training_progress">
            <column name="total_tasks" valueNumeric="20"/>
            <column name="completed_tasks" valueNumeric="12"/>
            <column name="total_job_analyses" valueNumeric="4"/>
            <column name="total_training_sessions" valueNumeric="3"/>
            <column name="training_progress_percent" valueNumeric="60"/>

            <!-- aktiivsuse ajad -->
            <column name="last_active" valueDate="2025-12-02T15:00:00"/>
            <column name="last_updated" valueDate="2025-12-02T15:00:00"/>

            <!-- enum status -->
            <column name="status" value="IN_PROGRESS"/>

            <where>email = 'test@ai.com'</where>
        </update>
    </changeSet>

</databaseChangeLog>
